<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Project</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .card {
      border-radius: 20px;
    }

    .card-header {
      border-radius: 20px 20px 0 0;
    }

    .form-control {
      border-radius: 12px;
    }

    .btn-primary {
      border-radius: 25px;
      font-weight: 500;
    }

    .btn-outline-primary {
      border-radius: 25px;
    }

    .milestone-input {
      margin-bottom: 10px;
    }
  </style>
</head>

<body>

  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white text-center">
        <h3>Create New Village Project</h3>
      </div>
      <div class="card-body">
        <form action="/admin/project/new" method="POST" enctype="multipart/form-data">

          <!-- Project Name -->
          <div class="mb-3">
            <label for="title" class="form-label">Project Name</label>
            <input type="text" class="form-control" id="title" name="project[title]" placeholder="Enter project name"
              required>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Project Description</label>
            <textarea class="form-control" id="description" name="project[description]" rows="3"
              placeholder="Write about the project..." required></textarea>
          </div>
          <!-- Village -->
          <div class="mb-3">
            <label for="village" class="form-label">Village Name</label>
            <select class="form-select" id="village" name="project[village]" required>
              <option value="" selected disabled>Select your village</option>
              <%for(let vill of data){%>
                <option value="<%= vill._id%>">
                  <%= vill.name%>
                </option>
                <%}%>
            </select>
          </div>
          <!-- Budget -->
          <div class="mb-3">
            <label for="budget" class="form-label">Budget (in â‚¹)</label>
            <input type="number" class="form-control" id="budget" name="project[budget]" placeholder="Enter budget"
              required>
          </div>

          <!-- Start Date -->
          <div class="mb-3">
            <label for="completeDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="completeDate" name="project[startDate]" required>
          </div>

          <!-- End Date -->
          <div class="mb-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="project[completeDate]" required>
          </div>

          <!-- Milestones -->
          <div class="mb-3">
            <label class="form-label">Project Milestones</label>
            <div id="milestones">
              <input type="text" class="form-control milestone-input" name="project[milestones][]"
                placeholder="Enter milestone" required>
            </div>
            <button type="button" class="btn btn-outline-primary mt-2" onclick="addMilestone()">+ Add Milestone</button>
          </div>

          <!-- Image Upload -->
          <div class="mb-3">
            <label for="images" class="form-label">Upload Project Images</label>
            <input type="file" class="form-control" id="images" name="project[image]" accept="image/*" multiple>
            <div class="form-text">You can select and upload multiple images (JPG, PNG, etc).</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Create Project</button>
          </div>

        </form>
      </div>
    </div>
  </div>

  <script>
    function addMilestone() {
      const milestonesDiv = document.getElementById('milestones');
      const input = document.createElement('input');
      input.type = 'text';
      input.className = 'form-control milestone-input';
      input.name = 'project[milestones][]';
      input.placeholder = 'Enter milestone';
      milestonesDiv.appendChild(input);
    }
  </script>

</body>

</html>